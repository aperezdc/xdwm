pkgname=( xdwm )
pkgver='6.0'
pkgrel='2'
pkgdesc='An extended dynamic window manager for X (dwm fork)'
url='http://github.com/aperezdc/xdwm'
license=( MIT )
source=( "http://github.com/fix-me-fix-me/${pkgname}-${pkgver}.tar.gz" )
sha1sums=('59314cb751faa0ff231c92635cbf659b7203d262')
arch=( i686 x86_64 )
options=( zipman )
depends=(
	'dmon>=0.4'
	'libx11'
	'libxinerama'
	'xorg-xrdb'
	'trayer'
	'consolekit'
	'gnome-settings-daemon'
	'network-manager-applet'
	'terminus-font'
	'vte3'
)
optdepends=(
	'pulseaudio:        launch pulseaudio at session startup'
	'gnome-keyring:     launch GNOME keyring at session startup'
	'gnome-screensaver: launch GNOME screensaver at session startup'
	'mpd:               launch MPD at session startup'
	'scmpc:             launch MPD scrobbler at session startup'
)

build ()
{
	cd "${srcdir}/${pkgname}-${pkgver}"
	make PREFIX=/usr
	make PREFIX=/usr -C session
}

package ()
{
	cd "${srcdir}/${pkgname}-${pkgver}"
	make PREFIX=/usr DESTDIR="${pkgdir}/" install
	make PREFIX=/usr DESTDIR="${pkgdir}/" -C session install
}
